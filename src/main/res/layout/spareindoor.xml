    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="104dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:translationZ="30dp"
        android:id="@+id/card1start"
        android:layout_alignParentLeft="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignStart="@+id/card1start"
            android:layout_alignLeft="@+id/card1start">

            <TextView
                android:id="@+id/taskheading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="30dp"
                android:fontFamily="serif"
                android:padding="10dp"
                android:text="      New Task Heading Here to be placed !"

                android:textColor="#939090"
                android:textSize="18dp"
                android:textStyle="normal"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="0dp"></TextView>

            <ImageButton
                android:id="@+id/imagebuttondaterange1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@+id/taskheading"
                android:layout_alignParentStart="true"

                android:layout_marginStart="12dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/ic_date_range_black_24dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="12dp" />

            <TextView
                android:id="@+id/startdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/taskheading"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="23dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/imagebuttondaterange1"
                android:text="2018-11-12"
                android:textColor="#7d8fd7"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/seperator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/taskheading"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/startdate"
                android:text="|"
                android:textColor="#919296"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/enddate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/taskheading"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="23dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/seperator"
                android:text="2018-11-12"
                android:textColor="#7d8fd7"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/imagebuttondaterange2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@+id/taskheading"
                android:layout_alignParentStart="true"
                android:layout_marginStart="335dp"


                android:layout_marginLeft="11dp"
                android:layout_marginTop="14dp"
                android:layout_toRightOf="@id/enddate"
                android:background="@drawable/ic_date_range_black_24dp"
                android:layout_alignParentLeft="true" />

            <TextView
                android:id="@+id/taskdetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imagebuttondaterange1"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="159dp"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:padding="5dp"
                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s,"
                android:textColor="#7c7777"
                android:textSize="18dp"
                android:textStyle="normal"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="0dp" />

            <Button
                android:id="@+id/starttask"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/roundbtn"
                android:fontFamily="sans-serif"
                android:text="START TASK"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:textStyle="bold" />

            <!--<EditText-->

            <!--android:id="@+id/taskupdate"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="100dp"-->
            <!--android:layout_alignParentStart="true"-->
            <!--android:layout_alignParentBottom="true"-->
            <!--android:layout_marginStart="0dp"-->
            <!--android:layout_marginBottom="9dp"-->
            <!--android:hint="Enter the task updates here !"-->
            <!--android:padding="10dp"-->
            <!--android:background="@drawable/stroke" />-->
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <!--</RelativeLayout>-->
    <!--</ScrollView>-->

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="107dp"
        android:translationZ="30dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/card1start"
        android:layout_marginBottom="22dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/completed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="13dp"
                android:text="Completed ? "
                android:textColor="#3c3c3e"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="13dp" />

            <RadioGroup
                android:id="@+id/radiogroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/completed"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/yesreadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Yes" />

                <RadioButton
                    android:id="@+id/noradio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="No" />
            </RadioGroup>

            <Button
                android:id="@+id/buttonendtime"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="10dp"
                android:layout_marginStart="0dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/roundbtn"
                android:fontFamily="sans-serif"
                android:text="END TASK"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="0dp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>